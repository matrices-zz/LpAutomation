<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:converters="clr-namespace:LpAutomation.Desktop.Avalonia.Converters"
             x:Class="LpAutomation.Desktop.Avalonia.App"
             RequestedThemeVariant="Dark">

	<Application.Styles>
		<FluentTheme />
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
		<StyleInclude Source="avares://LpAutomation.Desktop.Avalonia/Styles/Themes.axaml"/>
	</Application.Styles>
	<Application.Resources>
		<ResourceDictionary>
			<converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
		</ResourceDictionary>
	</Application.Resources>
</Application>
