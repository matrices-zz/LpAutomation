<UserControl x:Class="LpAutomation.Desktop.Views.RecommendationsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:LpAutomation.Desktop.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1400"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <UserControl.Resources>
        <converters:HeatArrowToBrushConverter x:Key="HeatArrowToBrushConverter" />
        <converters:HeatDeltaToBrushConverter x:Key="HeatDeltaToBrushConverter" />
        <converters:PriceArrowToBrushConverter x:Key="PriceArrowToBrushConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== Title + actions + status ===== -->
        <Grid Grid.Row="0" Margin="0,0,0,12" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Recommendations"
                           FontSize="26"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBlock Text="{Binding Status}"
                           Opacity="0.75"/>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Top">
                <Button Content="Refresh"
                        Padding="12,8"
                        Command="{Binding RefreshCommand}"
                        Margin="0,0,10,0"/>
                <ToggleButton Content="Compact"
                              IsChecked="{Binding IsCompactMode}"
                              Padding="12,8"/>
            </StackPanel>
        </Grid>

        <!-- ===== Filters (simple: search only for now) ===== -->
        <materialDesign:Card Grid.Row="1"
                             Padding="12"
                             Margin="0,0,0,12"
                             materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Margin="0,0,10,0"
                         Padding="10,8"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Search pools / chain / dex"/>

                <ComboBox Grid.Column="1"
                          Margin="0,0,10,0"
                          ItemsSource="{Binding RegimeFilterOptions}"
                          SelectedItem="{Binding SelectedRegimeFilter}"
                          Padding="10,6"/>

                <ComboBox Grid.Column="2"
                          Margin="0,0,10,0"
                          ItemsSource="{Binding ActionFilterOptions}"
                          SelectedItem="{Binding SelectedActionFilter}"
                          Padding="10,6"/>

                <ComboBox Grid.Column="3"
                          Margin="0,0,20,0"
                          ItemsSource="{Binding SortOptions}"
                          SelectedItem="{Binding SelectedSort}"
                          Padding="10,6"/>

                <ComboBox Grid.Column="4"
                          Margin="0,0,10,0"
                          ItemsSource="{Binding TimeframeOptions}"
                          SelectedItem="{Binding SelectedTimeframe}"
                          Padding="10,6"/>
            </Grid>
        </materialDesign:Card>

        <!-- ===== Dense table-like list ===== -->
        <materialDesign:Card Grid.Row="2"
                             Padding="0"
                             materialDesign:ElevationAssist.Elevation="Dp2"
                             HorizontalAlignment="Stretch">

            <Grid Grid.IsSharedSizeScope="True"
                  HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    
                </Grid.RowDefinitions>

                <!-- Header row -->
                <Border Grid.Row="0"
                        Padding="12,10"
                        Background="#1A1A1A">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*" MinWidth="140" SharedSizeGroup="ColPool"/>
                            <ColumnDefinition Width="1.1*" MinWidth="110" SharedSizeGroup="ColRegime"/>
                            <ColumnDefinition Width="1.1*" MinWidth="110" SharedSizeGroup="ColAction"/>
                            <ColumnDefinition Width="1.4*" MinWidth="130" SharedSizeGroup="ColSentiment"/>
                            <ColumnDefinition Width="0.7*" MinWidth="90"  SharedSizeGroup="ColMomentum"/>
                            <ColumnDefinition Width="1.2*" MinWidth="140" SharedSizeGroup="ColConfidence"/>
                            <ColumnDefinition Width="1.4*" MinWidth="160" SharedSizeGroup="ColReinvest"/>
                            <ColumnDefinition Width="1.4*" MinWidth="160" SharedSizeGroup="ColReallocate"/>
                            <ColumnDefinition Width="1.2*" MinWidth="170" SharedSizeGroup="ColUpdated"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Pool" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" Text="Regime" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="2" Text="Action" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="3" Text="Sentiment / Heat" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="4" Text="Momentum" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,10,0" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="Confidence" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="6" Text="Reinvest" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="7" Text="Reallocate" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="8" Text="Updated" FontWeight="SemiBold" Opacity="0.7"/>
                    </Grid>
                </Border>

                <!-- Items -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              HorizontalContentAlignment="Stretch"
                              CanContentScroll="False">

                    <ItemsControl ItemsSource="{Binding FilteredRows}"
                                  HorizontalAlignment="Stretch">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="{Binding RowPadding}"
                                        BorderBrush="#2A2A2A"
                                        BorderThickness="0,0,0,1"
                                        HorizontalAlignment="Stretch">
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.7*" MinWidth="170" SharedSizeGroup="ColPool"/>
                                            <ColumnDefinition Width="1.1*" MinWidth="110" MaxWidth="170" SharedSizeGroup="ColRegime"/>
                                            <ColumnDefinition Width="1.1*" MinWidth="110" MaxWidth="170" SharedSizeGroup="ColAction"/>
                                            <ColumnDefinition Width="1.4*" MinWidth="130" SharedSizeGroup="ColSentiment"/>
                                            <ColumnDefinition Width="0.7*" MinWidth="90"  SharedSizeGroup="ColMomentum"/>
                                            <ColumnDefinition Width="1.2*" MinWidth="140" SharedSizeGroup="ColConfidence"/>
                                            <ColumnDefinition Width="1.4*" MinWidth="160" SharedSizeGroup="ColReinvest"/>
                                            <ColumnDefinition Width="1.4*" MinWidth="160" SharedSizeGroup="ColReallocate"/>
                                            <ColumnDefinition Width="1.2*" MinWidth="170" SharedSizeGroup="ColUpdated"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Pool -->
                                        <Grid Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="{Binding PoolName}"
                                                       FontWeight="SemiBold"
                                                       TextWrapping="Wrap"/>

                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding PoolMeta}"
                                                       Opacity="0.7"
                                                       FontSize="12"
                                                       TextWrapping="Wrap"/>

                                            <TextBlock Grid.Row="2"
                                                       Text="{Binding PoolAddressShort}"
                                                       ToolTip="{Binding PoolAddress}"
                                                       Opacity="0.55"
                                                       FontSize="11"
                                                       FontFamily="Consolas"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </Grid>

                                        <!-- Regime badge -->
                                        <Border Grid.Column="1"
                                                CornerRadius="10"
                                                Padding="10,6"
                                                Background="{Binding RegimeBrush}"
                                                HorizontalAlignment="Left"
                                                MinWidth="90">
                                            <TextBlock Text="{Binding RegimeLabel}"
                                                       Foreground="Black"
                                                       FontWeight="SemiBold"
                                                       TextAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Action badge -->
                                        <Border Grid.Column="2"
                                                CornerRadius="10"
                                                Padding="10,6"
                                                Background="{Binding ActionBrush}"
                                                HorizontalAlignment="Left"
                                                MinWidth="90">
                                            <TextBlock Text="{Binding ActionLabel}"
                                                       Foreground="Black"
                                                       FontWeight="SemiBold"
                                                       TextAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Sentiment + Heat (Heat in its own bordered block so it doesn’t look “smashed”) -->
                                        <Grid Grid.Column="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="{Binding SentimentLabel}"
                                                       FontWeight="SemiBold"
                                                       TextWrapping="Wrap"/>

                                            <!-- Heat block -->
                                            <Border Grid.Row="1"
                                                    
                                                    Margin="0,4,0,0"
                                                    Padding="6,4"
                                                    CornerRadius="6"
                                                    BorderThickness="1"
                                                    BorderBrush="#33000000"
                                                    Background="#10FFFFFF"
                                                    MinWidth="150">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Heat row -->
                                                    <StackPanel Grid.Row="0"
                                                                Orientation="Horizontal"
                                                                ToolTip="{Binding HeatTooltip}">
                                                        <TextBlock Text="{Binding HeatArrowGlyph}"
                                                                   FontSize="18"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{Binding HeatArrowGlyph, Converter={StaticResource HeatArrowToBrushConverter}}"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="4,0,6,0"/>

                                                        <TextBlock Text="{Binding HeatText}"
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,6,0"/>

                                                        <TextBlock Text="{Binding HeatDeltaDisplay}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{Binding HeatDeltaDisplay, Converter={StaticResource HeatDeltaToBrushConverter}}"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <!-- Heat breakdown (3rd line) -->
                                                    <TextBlock Grid.Row="1"
                                                           Text="{Binding HeatBreakdownDisplay}"
                                                           Margin="0,2,0,0"
                                                           Opacity="0.75"
                                                           FontSize="11"
                                                           HorizontalAlignment="Center"
                                                           TextWrapping="NoWrap"
                                                           TextTrimming="CharacterEllipsis"/>
                                                </Grid>
                                            </Border>
                                        </Grid>

                                        <!-- Momentum -->
                                        <Grid Grid.Column="4"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      ToolTip="{Binding MomentumToolTip}">

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Arrow -->
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding MomentumArrowGlyph}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Foreground="{Binding MomentumArrowGlyph, Converter={StaticResource PriceArrowToBrushConverter}}"/>

                                            <!-- Delta -->
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding MomentumDeltaDisplay}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,2,0,0"
                                                       Foreground="{Binding MomentumArrowGlyph, Converter={StaticResource PriceArrowToBrushConverter}}"/>

                                            <!-- Label -->
                                            <TextBlock Grid.Row="2"
                                                       Text="15m vs 1h"
                                                       FontSize="11"
                                                       Opacity="0.65"
                                                       HorizontalAlignment="Center"/>
                                        </Grid>

                                        <!-- Confidence -->
                                        <Grid Grid.Column="5" Margin="0,0,10,0" VerticalAlignment="Center">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="{Binding ConfidenceLabel}" FontWeight="SemiBold"/>

                                            <ProgressBar Grid.Row="1"
                                                         Minimum="0"
                                                         Maximum="100"
                                                         Value="{Binding Confidence}"
                                                         Height="6"
                                                         Margin="0,4,0,0"
                                                         VerticalAlignment="Center"/>

                                            <!-- spacer row to keep bars aligned with Reinvest column -->
                                            <TextBlock Grid.Row="2"
                                                       Text=""
                                                       FontSize="12"
                                                       Opacity="0"/>
                                        </Grid>

                                        <!-- Reinvest -->
                                        <Grid Grid.Column="6" Margin="0,0,10,0" VerticalAlignment="Center">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="{Binding ReinvestScoreLabel}" FontWeight="SemiBold"/>

                                            <ProgressBar Grid.Row="1"
                                                         Minimum="0"
                                                         Maximum="100"
                                                         Value="{Binding ReinvestScore}"
                                                         Height="6"
                                                         Margin="0,4,0,0"
                                                         VerticalAlignment="Center"/>

                                            <TextBlock Grid.Row="2"
                                                       Text="{Binding ReinvestRationale}"
                                                       Opacity="0.7"
                                                       FontSize="12"
                                                       TextWrapping="Wrap"/>
                                        </Grid>

                                        <!-- Reallocate -->
                                        <Grid Grid.Column="7" Margin="0,0,10,0" VerticalAlignment="Center">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="{Binding ReallocateScoreLabel}" FontWeight="SemiBold"/>

                                            <ProgressBar Grid.Row="1"
                                                         Minimum="0"
                                                         Maximum="100"
                                                         Value="{Binding ReallocateScore}"
                                                         Height="6"
                                                         Margin="0,4,0,0"
                                                         VerticalAlignment="Center"/>

                                            <!-- spacer row to keep bars aligned with Reinvest column -->
                                            <TextBlock Grid.Row="2"
                                                       Text=""
                                                       FontSize="12"
                                                       Opacity="0"/>
                                        </Grid>

                                        <!-- Updated -->
                                        <StackPanel Grid.Column="8"
                                                    HorizontalAlignment="Left"
                                                    MinWidth="170"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding UpdatedAgo}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding SnapshotTimeDisplay}" Opacity="0.7" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>